        [Date.new(1998,1,1), 950],
        [Date.new(1998,1,1), 300],
        [Date.new(1998,2,1), 1200],
        [Date.new(1998,2,1), 950],
        [Date.new(1998,2,1), 788]
    ]) %>
<% end %>
